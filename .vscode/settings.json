{
    "editor.defaultFormatter": null,
    "editor.formatOnSave": true,
    "flake8.args": [
      "--max-line-length",
      "200"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        }
    },
    "[django-html]": {
      "editor.formatOnSave": false,
    }
}